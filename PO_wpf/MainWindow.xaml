<Window x:Class="PO_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PO_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Name="main">
        <TextBlock Name="txtbox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Right" Height="500" VerticalAlignment="Top" Width="500" Margin="0,10,10,0">
            <Grid Name="Map">
                <Image HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Width="10" x:Name="img1" Source="pack://application:,,,/img/placeholder.bmp" Margin="87,41,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
