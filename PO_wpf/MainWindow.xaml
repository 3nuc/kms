<Window x:Class="PO_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PO_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding WindowHeight, Mode=TwoWay}" Width="{Binding WindowWidth}">
    <Grid Name="main">
        <TextBlock Name="txtbox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Border Name ="MapBorder" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Right" Height="1000" VerticalAlignment="Top" Width="100" Margin="0,10,10,0">
            <Grid Name="MapCanvas">
                <Image HorizontalAlignment="Left" Height="10" VerticalAlignment="Bottom" Width="10" x:Name="img1" Source="pack://application:,,,/img/placeholder.bmp" Margin="68,0,0,23" RenderTransformOrigin="0.033,0.067"/>
            </Grid>
        </Border>
    </Grid>
</Window>
